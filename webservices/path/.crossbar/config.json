{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "paths": {
                        "/": {
                            "type": "archive",
                            "archive": "../home.zip",
                            "default_object": "index.html"
                        },
                        "info": {
                            "type": "nodeinfo"
                        },
                        "config": {
                            "type": "json",
                            "value": {
                                "url": "ws://localhost:8080/ws",
                                "realm": "testing"
                            }
                        },
                        "ws": {
                            "type": "websocket"
                        },
                        "nested": {
                            "type": "path",
                            "paths": {
                                "/": {
                                    "type": "archive",
                                    "archive": "../home.zip",
                                    "default_object": "index.html"
                                },
                                "info": {
                                    "type": "nodeinfo"
                                },
                                "config": {
                                    "type": "json",
                                    "value": {
                                        "url": "ws://localhost:8080/ws",
                                        "realm": "testing"
                                    }
                                },
                                "ws": {
                                    "type": "websocket"
                                }
                            }
                        }
                    }
                }
            ]
        }
    ]
}
