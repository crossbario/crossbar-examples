{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "websocket",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "options": {
                        "max_message_size": 16384
                    }
                },
                {
                    "type": "rawsocket",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8081
                    },
                    "options": {
                        "max_message_size": 16384
                    }
                }
            ],
            "components": [
                {
                    "type": "class",
                    "classname": "subscriber.MySubscriber",
                    "realm": "realm1"
                }
            ]
        },
        {
            "type": "container",
            "options": {
                "pythonpath": [
                    ".."
                ],
                "shutdown": "shutdown-on-last-component-stopped",
                "restart": "restart-always"
            },
            "components": [
                {
                    "type": "class",
                    "classname": "publisher.MyPublisher",
                    "realm": "realm1",
                    "transport": {
                        "type": "rawsocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "127.0.0.1",
                            "port": 8081
                        },
                        "serializer": "cbor",
                        "url": "rs://127.0.0.1:8081",
                        "options": {
                            "max_message_size": 16384
                        }
                    }
                }
            ]
        }
    ]
}
