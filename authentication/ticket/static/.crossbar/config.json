{
   "workers": [
      {
         "type": "router",
         "options": {
            "pythonpath": [".."]
         },
         "realms": [
            {
               "name": "realm1",
               "roles": [
                  {
                     "name": "backend",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        },
                        {
                           "uri": "com.example.topic2",
                           "subscribe": false
                        }
                     ]
                  },
                  {
                     "name": "frontend",
                     "permissions": [
                        {
                           "uri": "com.example.add2",
                           "call": true
                        },
                        {
                           "uri": "com.example.*",
                           "publish": true
                        },
                        {
                           "uri": "com.example.topic2",
                           "publish": false
                        },
                        {
                           "uri": "com.foobar.topic1",
                           "publish": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 8080
               },
               "paths": {
                  "/": {
                     "type": "static",
                     "directory": "../web"
                  },
                  "ws": {
                     "type": "websocket",
                     "serializers": ["json"],
                     "auth": {
                        "ticket": {
                           "type": "static",
                           "principals": {
                              "joe": {
                                 "ticket": "secret!!!",
                                 "role": "frontend"
                              },
                              "client1": {
                                 "ticket": "123sekret",
                                 "role": "frontend"
                              },
                              "client2": {
                                 "ticket": "${MYTICKET}",
                                 "role": "frontend"
                              }
                           }
                        }
                     }
                  }
               }
            }
         ],
         "components": [
            {
               "type": "class",
               "classname": "backend.BackendSession",
               "realm": "realm1",
               "role": "backend"
            }
         ]
      }
   ]
}
