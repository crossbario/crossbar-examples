{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "devices",
                    "roles": [
                        {
                            "name": "device",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "websocket",
                    "serializers": ["cbor"],
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080,
                        "tls": {
                            "certificate": "server.crt",
                            "key": "server.key",
                            "dhparam": "dhparam.pem",
                            "chain_certificates": [
                                "intermediate.cert.pem",
                                "ca.cert.pem"
                            ]
                        }
                    },
                    "auth": {
                        "cryptosign": {
                           "type": "static",

                           "principals": {
                               "client01@example.com": {
                                   "realm": "devices",
                                   "role": "device",
                                   "authorized_keys": [
                                       "545efb0a2192db8d43f118e9bf9aee081466e1ef36c708b96ee6f62dddad9122"
                                    ]
                                }
                            }
                        }
                    }
                }
            ]
        }
    ]
}
