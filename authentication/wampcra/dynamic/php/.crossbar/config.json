{
   "controller": {
   },
   "workers": [
      {
         "type": "router",
         "realms": [
            {
               "name": "realm1",
               "roles": [
                  {
                     "name": "authenticator",
                     "permissions": [
                        {
                           "uri": "com.example.authenticate",
                           "register": true
                        }
                     ]
                  },
                  {
                     "name": "backend",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        },
                        {
                           "uri": "com.example.topic2",
                           "subscribe": false
                        }
                     ]
                  },
                  {
                     "name": "frontend",
                     "permissions": [
                        {
                           "uri": "com.example.add2",
                           "call": true
                        },
                        {
                           "uri": "com.example.*",
                           "publish": true
                        },
                        {
                           "uri": "com.example.topic2",
                           "publish": false
                        },
                        {
                           "uri": "com.foobar.topic1",
                           "publish": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "websocket",
               "endpoint": {
                  "type": "tcp",
                  "port": 9000,
                  "interface": "127.0.0.1"
               },
               "auth": {
                  "wampcra": {
                     "type": "static",
                     "users": {
                        "authenticator1": {
                           "secret": "secret123",
                           "role": "authenticator"
                        },
                        "backend1": {
                           "secret": "secret456",
                           "role": "backend"
                        }
                     }
                  }
               }
            },
            {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 8080
               },
               "paths": {
                  "/": {
                     "type": "static",
                     "directory": "../web"
                  },
                  "ws": {
                     "type": "websocket",
                     "auth": {
                        "wampcra": {
                           "type": "dynamic",
                           "authenticator": "com.example.authenticate"
                        }
                     }
                  }
               }
            }
         ]
      },
      {
         "type": "guest",
         "executable": "/usr/bin/env",
         "arguments": [
            "php",
            "../authenticator.php",
            "ws://127.0.0.1:9000",
            "realm1",
            "authenticator1",
            "secret123"
         ]
      },
      {
         "type": "guest",
         "executable": "/usr/bin/env",
         "arguments": [
            "php",
            "../backend.php",
            "ws://127.0.0.1:9000",
            "realm1",
            "backend1",
            "secret456"
         ]
      },
      {
         "type": "guest",
         "executable": "/usr/bin/env",
         "arguments": [
            "php",
            "../client.php"
         ]
      }
   ]
}
